<resources>

    <style name="LabelEditorIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">12.0dip</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/pink</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:background">@color/main_bg</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>

    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextNormal">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
</resources>
