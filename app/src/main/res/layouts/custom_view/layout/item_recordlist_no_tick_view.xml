<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/touch_move_iv"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:padding="5dip"/>

    <CheckBox
        android:id="@+id/no_tick_select_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:checked="false"/>

    <EditText
        android:id="@+id/no_tick_content_et"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        android:layout_margin="5dip"
        android:textColor="@color/black"
        android:gravity="top"
        android:textSize="16sp"
        android:hint="@string/record_list_hint"/>

    <ImageView
        android:id="@+id/no_tick_cancel_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_material_delete_dark"
        android:padding="5dip"/>

</LinearLayout>